\begin{frame}{4.1 Recommandation, collaborative filtering}
  \begin{itemize}
  \item Algorithme classique de \textcolor{agaetisOrange}{recommandation de produits}
  \item Utilise les \textcolor{agaetisOrange}{notes} donné à chaque produit par les utilisateurs
  \item \textcolor{agaetisOrange}{Vainqueur du challenge Netflix} (et toujours utilisé)
  \end{itemize}
  \vfill
  \begin{minipage}{0.35\textwidth}
    \begin{figure}
      \includegraphics[width=0.9\textwidth]{figs/collabFilteringEx}\put(-88,26.5){\textcolor{black}{1}}\put(-94,8){\textcolor{red}{2.38}}
    \end{figure}
  \end{minipage}
  \hfill
  \begin{minipage}{0.6\textwidth}
    \begin{itemize}
    \item \textcolor{agaetisOrange}{Degré de similarité} entre utilisateurs (ou produits)
      \begin{itemize}
      \item Similarité \textcolor{agaetisOrange}{Cosinus} ou \textcolor{agaetisOrange}{Pearson}
      \end{itemize}
    \item Estimation de l'intérêt d'un utilisateur pour un produit en se basant sur les utilisateurs similaires:
    \end{itemize}
    \begin{equation*}
      cosSim(Bill, Tom) = 0.71 ~/~ cosSim(Jane, Tom) = 0.32
    \end{equation*}    
  \end{minipage}
  \vfill
  \begin{itemize}
  \item Filtrage \textcolor{agaetisOrange}{actif}: l'utilisateur donne des notes/son avis
  \item Filtrage \textcolor{agaetisOrange}{passif}: Il faut déduire les goûts de l'utilisateur via son comportement
  \item \textcolor{agaetisOrange}{Limites:} temps de calcul, nouveaux arrivants, comportements singuliers
  \end{itemize}
\end{frame}

\begin{frame}{4.1 Recommandation, collaborative filtering, formules}
  \begin{itemize}
  \item \textcolor{agaetisOrange}{Similarité Pearson:} $sim(x, y) = \frac{\displaystyle\sum_{i \in I_{xy}}(r_{x,i} - \bar{r_{x}})(r_{y,i} - \bar{r_{y}})}{\sqrt{\displaystyle\sum_{i \in I_{xy}}(r_{x,i} - \bar{r_{x}})^{2}}\sqrt{\displaystyle\sum_{i \in I_{xy}}(r_{y,i} - \bar{r_{y}})^{2}}}$
  \item \textcolor{agaetisOrange}{Similarité Cosinus:} $simCos(x,y) = cos(\vec{x}, \vec{y}) = \frac{\vec{x} . \vec{y}}{\|\vec{x}\| \times \|\vec{y}\|} = \frac{\displaystyle\sum_{i \in I_{xy}} r_{x,i}r_{y,i}}{\sqrt{\displaystyle\sum_{i \in I_{x}}r_{x,i}^{2}}\sqrt{\displaystyle\sum_{i \in I_{y}}r_{y,i}^{2}}}$
  \item \textcolor{agaetisOrange}{Estimation:} $r_{u,i} = \frac{\displaystyle\sum_{u' \in U} sim(u, u')r_{u',i}}{\displaystyle\sum_{u' \in U} |sim(u,u')|}$
  \end{itemize}
\end{frame}

\begin{frame}{4.2 Optimisation, algorithme génétique}
  \begin{itemize}
  \item Algorithme d'optimisation par sélection/mutation successives
  \item Réponds aux problèmes à forte combinatoire sans solution unique
  \item Détermine le jeu des solutions optimales (front de Pareto)
  \end{itemize}
  \begin{minipage}{.65\textwidth}
    \begin{itemize}
    \item \textcolor{agaetisOrange}{\textbf{population de solutions}}:
      \begin{itemize}
      \item \textcolor{agaetisOrange}{Initialisation $\rightarrow$ Selection $\rightarrow$ Reproduction $\rightarrow$ Mutation}
      \end{itemize}
    \end{itemize}
    \vfill
    \hspace{0.25\textwidth}
    \begin{minipage}{0.5\textwidth}
      \begin{figure}
        \includegraphics[width=\textwidth]{figs/Front_pareto.png}
      \end{figure}
    \end{minipage}
  \end{minipage}
  \begin{minipage}{.3\textwidth}
    \begin{figure}
      \includegraphics[width=0.9\textwidth]{figs/genAlg_desc.png}
    \end{figure}
  \end{minipage}
\end{frame}

